<%= form_for([@task.category, @task]) do |form| %>
  <%= render 'shared/errors', obj: @task%>

  <div class="field">
    <%= form.label :item %>
    <%= form.text_field :item %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>
  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, Task::STATUS_OPTIONS %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>