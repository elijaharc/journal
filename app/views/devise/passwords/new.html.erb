<div class='d-flex flex-column justify-content-between align-items-center'>
  <div class='col-md-8 col-11 mt-lg-5 mt-4'>
    <div class='card'>
      <div class="card-body shadow-lg rounded p-5 text-center">
        <h2 class='card-title text-center mb-3'>Forgot your password?</h2>
        <p class='text-center text-secondary'>Please enter your email address and we'll send you instructions on how to reset your password</p>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>


          <div class="field">
            <%= f.email_field :email, autocomplete: "email", class: 'w-100 mb-2 mt-3', autofocus: true, placeholder: 'Enter registered email' %>
          </div>

          <div class="actions d-flex justify-content-center">
            <%= f.submit "Send reset password instructions", class: 'btn btn-success btn-sm mb-4 shadow rounded mt-2' %>
          </div>
          <% end %>

          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


