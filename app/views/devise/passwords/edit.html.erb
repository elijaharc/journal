<div class='d-flex flex-column justify-content-between align-items-center'>
  <div class='col-md-8 col-11 mt-lg-5 mt-4'>
    <div class='card'>
      <div class="card-body shadow-lg rounded p-5 text-center">
        <h2 class='card-title text-center mb-3'>Change your password</h2>
        <p class='text-center text-secondary mb-4'>Please enter a new password for your account.</p>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field">
            <%= f.label :password, "New password", class: 'mb-1' %><br />
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control mb-3 text-center', placeholder: '6 characters minimum' %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, "Confirm new password", class: 'mb-1' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control mb-3 text-center' %>
          </div>

          <div class="actions">
            <%= f.submit "Change my password", class: 'btn btn-success mb-4' %>
          </div>
          <% end %>
        
          <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>


