<div class='d-flex flex-column justify-content-between align-items-center'>
  <div class='col-lg-10 mt-md-3'>
    <div class='card mt-3' id='login'>
      <div class="card-body shadow-lg rounded p-4">

        <h1 class='card-title'>Edit Profile <i class="bi bi-pencil-square"></i></i></h1>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.label :username, class: 'mt-2 mb-1' %>
              <%= f.text_field :username, class: 'w-100 mb-2 form-control'%>
            </div>

            <div class="field">
              <%= f.label :email %>
              <%= f.email_field :email, autocomplete: "email", class: 'w-100 mb-2 form-control' %>
            </div>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
            <% end %>

            <div class="field">
              <%= f.label :password, 'New password' %> <i>(leave blank if you don't want to change it)</i><br />
              <%= f.password_field :password, autocomplete: "new-password", class: 'w-100 mb-2 form-control', placeholder: '6 characters minimum' %>
            </div>

            <div class="field">
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'w-100 mb-2 form-control', placeholder: 'Repeat new password' %>
            </div>

            <div class="field">
              <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
              <%= f.password_field :current_password, autocomplete: "current-password", class: 'w-100 mb-2 form-control', autofocus: true%>
            </div>

            <div class="actions text-center">
              <%= f.submit "Update Account", class: 'btn btn-success mb-4 shadow rounded mt-2' %>
            </div>
          <% end %>

        <hr class='mb-4 mt-2'>

        <div class='text-center'>
          <h4 class='mb-0 text-center'>Delete my account</h4>
          <small class='text-danger'>(Warning! This action is irreversible. You will lose all your data.)</small>
          <%= button_to "Delete", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'mt-3 btn btn-danger btn-sm shadow mb-2' %>
        </div>
      </div>
    </div>
    
    <div class="text-center mt-3 mb-4">
      <%= link_to "Cancel", :back, class: 'mx-auto fw-light text-decoration-none' %>
    </div>

  </div>
</div>


