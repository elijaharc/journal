<%= form_with(model: category) do |form| %>
  <%= render 'shared/errors', obj: @category%>

  <div class="form-group mb-3">
    <%= form.label :category_name, 'Name', class: 'mb-1'%>
    <%= form.text_field :category_name, class: 'form-control shadow-sm rounded', placeholder: 'Enter journal name' %>
  </div>

  <div class="form-group mt-2">
    <%= form.label :description, class: 'mb-1' %>
    <%= form.text_field :description, class: 'form-control shadow-sm rounded', placeholder: 'Optional' %>
  </div>

  <div class="actions mt-4 text-center">
    <%= form.submit 'Create Journal', class: 'btn btn-primary btn-md shadow rounded' %>
  </div>
<% end %>
