<% if notice.present? %>
    <div class="alert alert-success text-center mt-3 mb-0" role="alert">
        <%= notice %>
    </div>
    <div class="card mt-3 shadow rounded">
    <%= render 'category_card' %>
<% elsif alert.present? %>
    <div class="alert alert-danger text-center mt-3 mb-0" role="alert">
        <%= alert %>
    </div>
    <div class="card mt-3 shadow rounded">
    <%= render 'category_card' %>
<% else %>
    <div class="card mt-md-5 mt-3 shadow rounded">
    <%= render 'category_card' %>
<% end %>

<div class="text-center mt-3 mb-4">
    <%= link_to 'Back to Home', home_path, class: 'fw-light text-decoration-none' %>
</div>