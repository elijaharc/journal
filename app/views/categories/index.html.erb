<div class="card mt-lg-5 shadow-sm rounded ">
    <div class="card-body">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb fw-light">
                <li class="breadcrumb-item"><%= link_to 'Home', home_path, class: "text-decoration-none" %></li>
                <li class="breadcrumb-item active" aria-current="journals">Journals</li>
            </ol>
        </nav>
        <h1 class="card-title d-flex justify-content-between align-items-center mb-3 mx-lg-2 display-4 fw-normal">Journals
            <p class='mb-2'><%= link_to '+ New Journal', new_category_path, class: 'btn btn-success btn-md py-1 px-2' %></p>
        </h1>
        
        <% @categories.each do |category| %>
            <div class="card mb-2 category-card shadow-sm rounded">
                <div class="card-body">
                    <div class="progress w-25 mb-2">
                        <div class="progress-bar bg-secondary" role="progressbar" style="width: <%= category.percent_complete %>%;" aria-valuenow="<%= category.percent_complete %>" aria-valuemin="0" aria-valuemax="100"><%= category.total_complete %> / <%= category.total_tasks %>
                        </div>
                    </div>
                    <h5 class="card-title d-flex justify-content-between align-items-start mb-0">
                    <div class="d-flex align-items-start flex-column justify-content-start">
                        
                        <span class="badge bg-<%= category.badge_color %> text-center mb-2 mt-1"><%= category.status %> </span>
                        <p><%= link_to category.category_name, category_path(category), class: 'text-decoration-none display-6 lead fw-normal' %></p>
                    </div>
                    <div>
                        <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_category_path(category), class: 'btn btn-secondary btn-md' %>
                        <%= link_to '<i class="bi bi-trash"></i>'.html_safe, category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-md' %>
                    </div>
                    </h5>

                    <p class='mb-2 mt-0 text-secondary'><%= category.description %></p>  
                </div>
            </div>
        <% end %>
    </div>
</div>

<div class="text-center mt-2 mb-5">
    <%= link_to 'Back to Home', home_path %>
</div>

